<% if session[:user_id]%>
	<div class="login">
		<form input="/login" method="POST">
			<p>LOGIN</p>
			EMAIL:
			<br>
			<input type="text" name="user[email]">
			<br>
			PASSWORD:
			<br>
			<input type="password" name="user[password]">
			<br>
			<input type="submit" name="submit">
		</form>
	</div>
<%else%>
	<div class="signup">
		<form input="/signup" method="POST">
			<p>SIGNUP</p>
			NAME:
			<br>
			<input type="text" name="user[name]">
			<br>
			EMAIL:
			<br>
			<input type="text" name="user[email]">
			<br>
			PASSWORD:
			<br>
			<input type="password" name="user[password]">
			<br>
			<input type="submit" name="submit">

		</form>
	</div>
<%end%>

